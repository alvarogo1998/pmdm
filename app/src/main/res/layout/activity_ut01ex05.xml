<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ut01.ex01.presentation.Ut01Ex05Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:background="@drawable/tapa1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_image"/>

        <LinearLayout
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/both_spading"
            android:padding="@dimen/both_spading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white_50">
            <TextView
                android:text="1ยบ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Chubasquero de Sta. Teresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Bar Restaurante El Comienzo"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelPoints"
            android:layout_alignParentStart="true"
            android:text="Total: 2 Ptos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/labelAvg"
            android:text="Media: 4"
            android:layout_toRightOf="@id/labelPoints"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toRightOf="@id/labelAvg"
            android:src="@drawable/ic_star"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </RelativeLayout>

</LinearLayout>