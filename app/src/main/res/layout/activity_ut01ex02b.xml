 <?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ut01.ex02.presentation.Ut01ex02b"
    android:orientation="vertical"
    android:padding="5dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/car"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/title"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_description"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="descripcion"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/size_emptyStar"
            android:layout_height="@dimen/size_emptyStar"
            android:id="@+id/star1"
            app:srcCompat="@drawable/ic_emtystar"
            android:tint="@color/red"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/size_emptyStar"
            android:layout_height="@dimen/size_emptyStar"
            android:id="@+id/star2"
            app:srcCompat="@drawable/ic_emtystar"
            android:tint="@color/red"/>
    </LinearLayout>

</LinearLayout>